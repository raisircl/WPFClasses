<Window x:Class="WpfAppDataBinding.WindowObjectBindingUsingDatContext"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDataBinding"
        mc:Ignorable="d"
        Title="WindowObjectBindingUsingDatContext" Height="450" Width="800">

    <StackPanel>
        <Label x:Name="label" Content="Name"/>
        <TextBox x:Name="txtName" TextWrapping="Wrap" Text="{Binding PName}" Width="120"/>


        <Label x:Name="label1" Content="Job"/>
        <TextBox x:Name="txtJob" TextWrapping="Wrap" Text="{Binding Job}" Width="120"/>

        <Label x:Name="label2" Content="Sal"/>
        <TextBox x:Name="txtSal" TextWrapping="Wrap" Text="{Binding Sal}" Width="120"/>
        <Button x:Name="button" Content="Button" Click="btn_Click"/>

    </StackPanel>
        

</Window>
